		"react-router-dom": "^7.3.0",
		"xid-ts": "1.0.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"daisyui": "^5.0.6",
		"tailwindcss": "^4.0.14"
	}
